<Window x:Class="ShawarmaManager.pages.employeeEditor.EmployeeEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:svg1="https://github.com/dotnetprojects/SVGImage"
        xmlns:local="clr-namespace:ShawarmaManager.pages.employeeEditor" xmlns:svgc1="http://sharpvectors.codeplex.com/svgc/"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Работа с сотрудниками" Height="450" Width="800" Background="Gray">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="397*"/>
        </Grid.ColumnDefinitions>
            <Button Content="Редакция сотрудника" Width="199" Cursor="Hand" Click="Button_Click" Margin="10,69,10,0" Height="32" VerticalAlignment="Top"/>
            <Button Content="Добавление сотрудника" Width="199" Cursor="Hand" Click="Button_Click_add" Margin="10,18,10,0" Height="32" VerticalAlignment="Top"/>

    </Grid>
</Window>
