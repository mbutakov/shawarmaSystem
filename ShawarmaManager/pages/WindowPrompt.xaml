<Window x:Class="ShawarmaManager.pages.WindowPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShawarmaManager.pages"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Вы уверены?" Height="150" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="36*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Viewbox Height="104" VerticalAlignment="Center" Grid.Row="1">
            <Button Content="Да" Click="OKButton_Click" Margin="0,25,0,25"/>
        </Viewbox>
        <Viewbox Grid.Column="1"  VerticalAlignment="Center" Height="104" Grid.Row="1" >
            <Button Content="Нет"  Click="NOButton_Click" Margin="0,25,0,25" />
        </Viewbox>
        <Label Name="LabelText" Content="текст" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#DD000000" Grid.ColumnSpan="2" Width="200" Height="29"/>
    </Grid>

</Window>
